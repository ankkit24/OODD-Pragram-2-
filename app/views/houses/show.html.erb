<% if logged_in? %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @house.location %>
</p>

<p>
  <strong>Company:</strong>
  <%= @house.company.name %>
</p>

<p>
  <strong>Area:</strong>
  <%= @house.area %>
</p>

<p>
  <strong>Year:</strong>
  <%= @house.year %>
</p>

<p>
  <strong>Style:</strong>
  <%= @house.style %>
</p>

<p>
  <strong>Price:</strong>
  <%= @house.price %>
</p>

<p>
  <strong>Floors:</strong>
  <%= @house.floors %>
</p>

<p>
  <strong>Basement:</strong>
  <%= @house.basement %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @house.owner %>
</p>

<p>
  <strong>Realtor's contact:</strong>
  <%= @house.realtor.phone %>
</p>

<!--to display the uploaded image -->
<p>
  <strong>Image of the House</strong><br><br>
  <%= image_tag @house.image_url.to_s %>
</p>

<p>
  <% unless session[:role] == 'House Hunter'%>
    <%= link_to 'Potential Buyers', "/favourites/potential_buyers/#{@house.id}"  %>
    <% end %>
</p>
<% if session[:role] == 'Admin' || session[:role] == 'Realtor' && current_user.company_id == @house.company_id%>
<%= link_to 'Edit', edit_house_path(@house) %>
    <% end %>
  <a href="javascript:history.back()">Back</a>
  <% else %>
  <script type="text/javascript">
      window.location.href="/login"  //Redirect to login for unlogged in users
  </script>
<% end %>