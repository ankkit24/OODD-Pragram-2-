<%= form_with(model: inquiry, local: true) do |form| %>
  <% if inquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
        <% inquiry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="col-md-4 col-md-offset-3">
      <div class="row form">

        <%# ------------HOUSE------------- %>
        <%= form.label "House" %>
        <%= select("inquiry", "house_id", House.all.collect{ |c| [ c.name, c.id ]}, { include_blank: true }, {class: "form-control"}) %>

        <%#-------------SUBJECT----------- %>
        <div class="field form-group">
          <%= form.label :subject %>
          <%= form.text_field :subject, id: :inquiry_subject ,class: 'form-control', placeholder: "Enter subject"%>
        </div>

        <%# ------------MESSAGE------------ %>
        <div class="field">
          <%= form.label :message %>
          <%= form.text_area :message, id: :inquiry_message,class: 'form-control', placeholder: "Enter Message" %>
        </div>

        <div class="actions form-group">
          <%= form.submit 'Post Inquiry', class: 'btn btn-primary'%>
        </div>
      </div>
    </div>
  </div>

<% end %>
