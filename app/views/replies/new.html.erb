<% if logged_in? %>
  <% if session[:role] == 'Admin' || session[:role] == 'Realtor' && @realtor.company_id == @inquiry.house.company_id %>
<h1>New Reply</h1>

<%= render 'form', reply: @reply %>

<%= link_to 'Back', replies_path %>
<% else %>
    <% if session[:role] == 'Realtor' %>
      <script type="text/javascript">
          window.location.href="/realtors/<%= current_user.id %>"
      </script>
    <% else %>
      <% if session[:role] == 'House Hunter' %>
        <script type="text/javascript">
            window.location.href="/house_hunters/<%= current_user.id %>"
        </script>
<%end %>
<% end %>
    <a href="javascript:history.back()">Back</a>
<% end %>
<% else %>
  <script type="text/javascript">
      window.location.href="/login"
  </script>
<% end %>