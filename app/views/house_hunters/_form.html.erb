<%= form_with(model: house_hunter, local: true) do |form| %>
  <% if house_hunter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house_hunter.errors.count, "error") %> prohibited this house_hunter from being saved:</h2>

      <ul>
        <% house_hunter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="col-md-4 col-md-offset-3">
      <div class="row form">

        <%# ----------------HOUSE HUNTER NAME---------------%>
        <div class="field form-group">
          <%= form.label :name %>
          <%= form.text_field :name, id: :house_hunter_name,class: 'form-control',  placeholder: "Enter Name"  %>
        </div>

        <%# ----------------EMAIL---------------%>
        <div class="field form-group">
          <%= form.label :email %>
          <%= form.email_field :email, id: :house_hunter_email, class: 'form-control', placeholder: "Enter Email"  %>
        </div>

        <%# ----------------PASSWORD---------------%>
        <div class="field form-group">
          <%= form.label :password %>
          <%= form.password_field :password, id: :realtor_password, class: 'form-control', placeholder: "Enter Password" %><br>
          <%= form.label :password_confirmation, "Confirm Password" %>
          <%= form.password_field :password_confirmation, id: :house_hunter_password, class: 'form-control', placeholder: "Enter password again"  %>
        </div>

        <%# ----------------PHONE---------------%>
        <div class="field form-group">
          <%= form.label "Contact Number" %>
          <%= form.text_field :phone, id: :house_hunter_phone,class: 'form-control', placeholder: "Enter Phone"  %>
        </div>

        <%# ----------------PREFERRED---------------%>
        <div class="field form-group">
          <%= form.label "Preferred contact" %>
          <%= form.select :preferred, ['Email', 'Text', 'Phone'], { include_blank: true }, id: :house_hunter_preferred, class: "form-control" %>
        </div>

        <div class="actions form-group">
          <%= form.submit  'Submit', class: 'btn btn-primary'%>
        </div>
      </div>
    </div>
  </div>
<% end %>
