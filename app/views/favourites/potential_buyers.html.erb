<% if logged_in? %>
  <% if session[:role] == 'House Hunter'%>
    <script type="text/javascript">
        window.location.href="/house_hunters/<%= current_user.id %>"  // put your correct path in a string here
    </script>
  <% else %>
    <p id="notice"><%= notice %></p>

    <h1>Potential Buyers</h1>

    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @favourites.each do |favourite| %>
        <tr>
          <td><%= favourite.house_hunter.name %></td>
          <td><%= favourite.house_hunter.email %></td>
          <td><%= favourite.house_hunter.phone %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Back', houses_path, class: "btn btn-default" %>
  <% end %>
<% else %>
  <script type="text/javascript">
      window.location.href="/login"  //Redirect to login for unlogged in users
  </script>
<% end %>