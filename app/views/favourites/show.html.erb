<% if logged_in?  %>

  <p id="notice"><%= notice %></p>
  <p>
    <strong>House Hunter:</strong>
    <%= @favourite.house_hunter.name %>
  </p>

  <p>
    <strong>House:</strong>
    <%= @favourite.house.name %>
  </p>
  <%= link_to 'Back', favourites_path, class: "btn btn-default" %>
<% else %>
  <script type="text/javascript">
      window.location.href="/login"  //Redirect to login for unlogged in users
  </script>
<% end %>