<% if logged_in?  && session[:role] == 'Admin'%>
  <p id="notice"><%= notice %></p>
  <div class="center jumbotron">
    <h1 >Admin Panel</h1>
  </div>
  <div class="container">
    <div class="col-md-4 col-md-offset-5">

      <p>
        <strong>Name:</strong>
        <%= @admin.name %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @admin.email %>
      </p>
      <%#= link_to 'Edit', edit_admin_path(@admin) %>
      <br>
      <%= link_to 'Edit Admin Details', edit_admin_path(@admin) , class: "btn btn-default" %>

    </div>
  </div>
  <br>
  <br>
  <br>

  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="row center form">
        <h1>Manage Companies</h1>
        <%= link_to 'List Companies',  companies_path, class: 'btn btn-success', style: 'color:#FFFFFF;'%><br><br>
        <%= link_to 'Create Company', new_company_path, class: 'btn btn-primary', style: 'color:#FFFFFF;'%>
      </div>
    </div>
  </div>

  <br><br>

  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="row center form">
        <h1>Manage Houses</h1>
        <%= link_to 'View Houses', houses_path, class: 'btn btn-success', style: 'color:#FFFFFF;'%><br><br>
        <%= link_to 'New House', new_house_path, class: 'btn btn-primary', style: 'color:#FFFFFF;'%>
      </div>
    </div>
  </div>

  <br><br>

  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="row center form">
        <h1>Manage Realtors</h1>
        <%= link_to 'List Realtors', realtors_path, class: 'btn btn-success', style: 'color:#FFFFFF;'%><br><br>
        <%= link_to 'New Realtor', new_realtor_path, class: 'btn btn-primary', style: 'color:#FFFFFF;'%>
        <br><br><%= link_to 'Realtor\'s account', @realtor, class: 'btn btn-danger', style: 'color:#FFFFFF;'%>
      </div>
    </div>
  </div>

  <br><br>
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <div class="row center form">
        <h1>Manage House Hunters</h1>
        <%= link_to 'List House Hunters', house_hunters_path, class: 'btn btn-success', style: 'color:#FFFFFF;'%><br><br>
        <%= link_to 'Create House Hunter', new_house_hunter_path , class: 'btn btn-primary', style: 'color:#FFFFFF;'%>
        <br><br><%= link_to 'House Hunter\'s account', @house_hunter, class: 'btn btn-danger', style: 'color:#FFFFFF;'%>
      </div>
    </div>
  </div>
  <br><br>
<% else %>
  <script type="text/javascript">
      window.location.href="/login"  // put your correct path in a string here
  </script>
<% end %>